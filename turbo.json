{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": [
        "codegen",
        "^build"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "lint": {},
    "dev": {
      "dependsOn": [
        "codegen"
      ],
      "cache": false
    },
    "codegen": {
      "outputs": [
        "./packages/convostack-frontend-react/graphql/generated/**",
        "./packages/convostack-backend-express/generated/**",
        "./packages/convostack-storage-engine-prisma-sqlite/generated/**"
      ]
    }
  }
}